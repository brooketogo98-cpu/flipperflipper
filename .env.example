# Stitch RAT Web Interface - Environment Configuration
# Copy this file to .env and configure your credentials
# IMPORTANT: Never commit the .env file to version control!

# =============================================================================
# REQUIRED: Admin Credentials
# =============================================================================
# These credentials are used to access the web interface
# SECURITY: Use a strong, unique password (minimum 12 characters)
# The application will NOT start without these being configured!

STITCH_ADMIN_USER=admin
STITCH_ADMIN_PASSWORD=ChangeThisToAStrongPassword123!

# =============================================================================
# OPTIONAL: Security Configuration
# =============================================================================
# Allowed CORS origins (comma-separated list of allowed origins)
# Default: localhost variations for development
# SECURITY: In production, set this to your specific domain(s)
# Example for single domain: STITCH_ALLOWED_ORIGINS=https://yourdomain.com
# Example for multiple: STITCH_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# WARNING: Setting to '*' allows ANY origin - NEVER use in production!
# STITCH_ALLOWED_ORIGINS=https://yourdomain.com

# Session timeout in minutes (default: 30)
# STITCH_SESSION_TIMEOUT=30

# Maximum login attempts before lockout (default: 5)
# STITCH_MAX_LOGIN_ATTEMPTS=5

# Login attempt window in minutes (default: 15)
# STITCH_LOGIN_WINDOW=15

# =============================================================================
# OPTIONAL: Server Configuration
# =============================================================================
# Web interface port (default: 5000)
STITCH_WEB_PORT=5000

# Stitch RAT server port (default: 4040)
STITCH_SERVER_PORT=4040

# Debug mode (default: False in production)
# WARNING: Never enable debug mode in production!
STITCH_DEBUG=False

# =============================================================================
# OPTIONAL: SSL/TLS Configuration
# =============================================================================
# Enable HTTPS (default: False)
# STITCH_ENABLE_HTTPS=False

# SSL certificate path
# STITCH_SSL_CERT=/path/to/cert.pem

# SSL key path
# STITCH_SSL_KEY=/path/to/key.pem

# =============================================================================
# OPTIONAL: Email Notifications
# =============================================================================
EMAIL_NOTIFICATIONS_ENABLED=False
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_EMAIL=

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit the .env file to version control (it's in .gitignore)
# 2. Keep your credentials secure and unique
# 3. Use HTTPS in production environments
# 4. Restrict CORS origins to specific domains in production
# 5. Consider using a password manager to generate strong passwords
# 6. Change credentials immediately if compromised
# 7. Minimum password length: 12 characters (enforced by application)
