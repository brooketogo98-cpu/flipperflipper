# Production Environment Configuration for Elite RAT
# IMPORTANT: Set these values before deployment!

# ============================================================================
# CRITICAL SECURITY SETTINGS - MUST BE CHANGED!
# ============================================================================
STITCH_ADMIN_USER=admin
STITCH_ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_NOW!
STITCH_SECRET_KEY=CHANGE_THIS_SECRET_KEY_TO_RANDOM_64_CHAR_STRING

# ============================================================================
# Server Configuration
# ============================================================================
STITCH_HOST=0.0.0.0
STITCH_PORT=5000
STITCH_DEBUG=false
STITCH_SERVER_PORT=4040

# ============================================================================
# HTTPS/SSL Configuration (HIGHLY RECOMMENDED for production)
# ============================================================================
STITCH_ENABLE_HTTPS=true
STITCH_SSL_AUTO_GENERATE=true
STITCH_SSL_CERT_DIR=/workspace/certs
STITCH_SSL_COUNTRY=US
STITCH_SSL_STATE=State
STITCH_SSL_CITY=City
STITCH_SSL_ORG=Elite RAT Services
STITCH_SSL_CN=your-domain.com

# ============================================================================
# Security Configuration
# ============================================================================
STITCH_REQUIRE_STRONG_PASSWORD=true
STITCH_MIN_PASSWORD_LENGTH=16
STITCH_SESSION_TIMEOUT=30
STITCH_MAX_LOGIN_ATTEMPTS=3
STITCH_LOGIN_LOCKOUT_MINUTES=30

# ============================================================================
# Rate Limiting
# ============================================================================
STITCH_COMMANDS_PER_MINUTE=20
STITCH_EXECUTIONS_PER_MINUTE=30
STITCH_API_POLLING_PER_HOUR=500
STITCH_DEFAULT_RATE_LIMIT_DAY=100
STITCH_DEFAULT_RATE_LIMIT_HOUR=25

# ============================================================================
# Logging Configuration
# ============================================================================
STITCH_LOG_LEVEL=INFO
STITCH_ENABLE_FILE_LOGGING=true
STITCH_LOG_MAX_BYTES=52428800
STITCH_LOG_BACKUP_COUNT=10
STITCH_LOG_RETENTION_DAYS=30

# ============================================================================
# CORS Configuration (Restrict to your domains)
# ============================================================================
STITCH_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# Connection Management
# ============================================================================
STITCH_MAX_CONNECTIONS=50
STITCH_CONNECTION_TIMEOUT_SECONDS=300
STITCH_HEARTBEAT_INTERVAL_SECONDS=30

# ============================================================================
# Content Security Policy
# ============================================================================
STITCH_CSP_ENABLED=true
STITCH_CSP_REPORT_ONLY=false

# ============================================================================
# Operational Features
# ============================================================================
STITCH_ENABLE_METRICS=true
STITCH_METRICS_AUTH_REQUIRED=true
STITCH_ENABLE_BACKUP_RESTORE=true
STITCH_BACKUP_INCLUDE_LOGS=false

# ============================================================================
# Upload Limits
# ============================================================================
STITCH_MAX_UPLOAD_SIZE=52428800
STITCH_ALLOWED_UPLOAD_EXTENSIONS=.txt,.pdf,.doc,.docx,.png,.jpg,.zip

# ============================================================================
# Database Configuration (if using SQLite)
# ============================================================================
STITCH_ENABLE_SQLITE=true

# ============================================================================
# Alert Configuration (Optional)
# ============================================================================
STITCH_ENABLE_FAILED_LOGIN_ALERTS=true
STITCH_FAILED_LOGIN_THRESHOLD=3
STITCH_ALERT_EMAIL=admin@your-domain.com
STITCH_SMTP_HOST=smtp.your-domain.com
STITCH_SMTP_PORT=587
STITCH_SMTP_USER=alerts@your-domain.com
STITCH_SMTP_PASSWORD=SMTP_PASSWORD_HERE
STITCH_SMTP_USE_TLS=true