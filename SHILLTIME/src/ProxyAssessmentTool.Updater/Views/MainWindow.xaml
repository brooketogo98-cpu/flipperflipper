<Window x:Class="ProxyAssessmentTool.Updater.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProxyAssessmentTool Updater"
        Width="500" Height="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF0078D4" Padding="20">
            <StackPanel>
                <TextBlock Text="ProxyAssessmentTool Update" 
                           FontSize="20" 
                           FontWeight="SemiBold"
                           Foreground="White"/>
                <TextBlock Text="A new version is ready to install"
                           FontSize="12"
                           Foreground="#E0FFFFFF"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Version Info -->
                <Border Background="#FFF0F0F0" 
                        BorderBrush="#FFE0E0E0" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,0,0,15"
                        Visibility="{Binding Manifest, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold" FontSize="14">Version Information</TextBlock>
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" Foreground="#FF666666"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Manifest.Version}" FontWeight="SemiBold"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Released:" Foreground="#FF666666" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Manifest.ReleaseDate, StringFormat='{}{0:yyyy-MM-dd}'}" Margin="0,5,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Changelog -->
                <Border Background="#FFF8F8F8" 
                        BorderBrush="#FFE0E0E0" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        Visibility="{Binding Manifest.Changelog, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10">What's New</TextBlock>
                        <TextBlock Text="{Binding Manifest.Changelog}" 
                                   TextWrapping="Wrap"
                                   Foreground="#FF333333"/>
                    </StackPanel>
                </Border>
                
                <!-- Error Message -->
                <Border Background="#FFFFF0F0" 
                        BorderBrush="#FFFF6B6B" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,15,0,0"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="âš  Error" 
                                   FontWeight="SemiBold" 
                                   Foreground="#FFCC0000"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   TextWrapping="Wrap"
                                   Foreground="#FF990000"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Progress -->
        <Grid Grid.Row="2" Margin="20,0,20,10">
            <ProgressBar Height="6" 
                         Value="{Binding Progress}" 
                         Maximum="100"
                         Foreground="#FF0078D4"
                         Background="#FFE0E0E0"
                         BorderThickness="0"/>
            <TextBlock Text="{Binding Status}" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       Foreground="#FF666666"/>
        </Grid>
        
        <!-- Actions -->
        <Border Grid.Row="3" Background="#FFF8F8F8" BorderBrush="#FFE0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,15">
                <Button Content="Cancel" 
                        Width="100" 
                        Height="32"
                        Margin="0,0,10,0"
                        Command="{Binding CancelCommand}"/>
                <Button Content="Install Update" 
                        Width="120" 
                        Height="32"
                        Background="#FF0078D4"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Command="{Binding InstallCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>