<UserControl x:Class="ProxyAssessmentTool.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Settings Header -->
            <TextBlock Text="Settings" 
                       FontSize="32" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,20"/>
            
            <!-- Software Update Section (iPhone-like) -->
            <Border Background="{DynamicResource SystemControlBackgroundListLowBrush}"
                    CornerRadius="8"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Update Header -->
                    <Button Grid.Row="0" 
                            x:Name="UpdateButton"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20"
                            Click="UpdateButton_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Icon -->
                            <Border Grid.Column="0" 
                                    Width="40" Height="40"
                                    CornerRadius="8"
                                    Background="#FF0078D4"
                                    Margin="0,0,15,0">
                                <TextBlock Text="⬇" 
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="White"/>
                            </Border>
                            
                            <!-- Text -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Software Update" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"/>
                                <TextBlock x:Name="UpdateStatusText"
                                           Text="Checking for updates..."
                                           FontSize="13"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <!-- Badge/Arrow -->
                            <Grid Grid.Column="2" VerticalAlignment="Center">
                                <!-- Update Available Badge -->
                                <Border x:Name="UpdateBadge"
                                        Background="#FFFF3B30"
                                        CornerRadius="10"
                                        Padding="8,4"
                                        Visibility="Collapsed"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="1" 
                                               Foreground="White"
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                </Border>
                                
                                <!-- Arrow -->
                                <TextBlock Text="›" 
                                           FontSize="20"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            </Grid>
                        </Grid>
                    </Button>
                    
                    <!-- Update Details (Expanded View) -->
                    <Border Grid.Row="1" 
                            x:Name="UpdateDetailsPanel"
                            Visibility="Collapsed"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            Margin="0,1,0,0">
                        <StackPanel Margin="20">
                            <!-- Version Info -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="UpdateVersionText"
                                               Text="ProxyAssessmentTool 2.0.0" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock x:Name="UpdateSizeText"
                                               Text="234.5 MB"
                                               FontSize="13"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1"
                                           x:Name="CurrentVersionText"
                                           Text="Current: 1.0.0"
                                           FontSize="12"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- Release Notes -->
                            <TextBlock Text="What's New"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <ScrollViewer MaxHeight="200" 
                                          VerticalScrollBarVisibility="Auto"
                                          Margin="0,0,0,15">
                                <TextBlock x:Name="ReleaseNotesText"
                                           TextWrapping="Wrap"
                                           FontSize="13"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            </ScrollViewer>
                            
                            <!-- Download/Install Button -->
                            <Button x:Name="DownloadInstallButton"
                                    HorizontalAlignment="Stretch"
                                    Height="40"
                                    Click="DownloadInstallButton_Click">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock x:Name="DownloadButtonIcon" Text="⬇" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="DownloadButtonText" Text="Download and Install"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Progress Bar -->
                            <ProgressBar x:Name="DownloadProgress"
                                         Height="4"
                                         Margin="0,10,0,0"
                                         Visibility="Collapsed"/>
                            <TextBlock x:Name="DownloadProgressText"
                                       HorizontalAlignment="Center"
                                       FontSize="12"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       Margin="0,5,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Auto-Update Settings -->
                    <StackPanel Grid.Row="2" Margin="20,15">
                        <ToggleSwitch x:Name="AutoUpdateToggle"
                                      Header="Automatic Updates"
                                      IsOn="True"
                                      Toggled="AutoUpdateToggle_Toggled"
                                      Margin="0,0,0,10"/>
                        
                        <ComboBox x:Name="UpdateIntervalCombo"
                                  Header="Check for updates"
                                  SelectedIndex="1"
                                  SelectionChanged="UpdateIntervalCombo_SelectionChanged"
                                  HorizontalAlignment="Stretch">
                            <ComboBoxItem>Every 6 hours</ComboBoxItem>
                            <ComboBoxItem>Every 24 hours</ComboBoxItem>
                            <ComboBoxItem>Every week</ComboBoxItem>
                            <ComboBoxItem>Every month</ComboBoxItem>
                        </ComboBox>
                        
                        <TextBlock x:Name="LastCheckText"
                                   Text="Last checked: Never"
                                   FontSize="12"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Other Settings Sections -->
            <Border Background="{DynamicResource SystemControlBackgroundListLowBrush}"
                    CornerRadius="8"
                    Margin="0,0,0,20">
                <StackPanel>
                    <!-- General Settings -->
                    <Border BorderThickness="0,0,0,1" 
                            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}">
                        <StackPanel Margin="20,15">
                            <TextBlock Text="General" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,15"/>
                            
                            <ToggleSwitch Header="Start with Windows"
                                          IsOn="False"
                                          Margin="0,0,0,10"/>
                            
                            <ToggleSwitch Header="Minimize to system tray"
                                          IsOn="True"
                                          Margin="0,0,0,10"/>
                            
                            <ComboBox Header="Theme"
                                      SelectedIndex="0"
                                      HorizontalAlignment="Stretch">
                                <ComboBoxItem>System default</ComboBoxItem>
                                <ComboBoxItem>Light</ComboBoxItem>
                                <ComboBoxItem>Dark</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- Security Settings -->
                    <StackPanel Margin="20,15">
                        <TextBlock Text="Security" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>
                        
                        <ToggleSwitch Header="Require authentication on startup"
                                      IsOn="False"
                                      Margin="0,0,0,10"/>
                        
                        <ToggleSwitch Header="Enable audit logging"
                                      IsOn="True"
                                      Margin="0,0,0,10"/>
                        
                        <Button Content="Clear cached data"
                                HorizontalAlignment="Left"
                                Padding="15,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- About Section -->
            <Border Background="{DynamicResource SystemControlBackgroundListLowBrush}"
                    CornerRadius="8">
                <StackPanel Margin="20,15">
                    <TextBlock Text="About" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" Margin="0,0,20,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="AppVersionText" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="License:" Margin="0,0,20,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Proprietary" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Support:" Margin="0,0,20,5"/>
                        <HyperlinkButton Grid.Row="2" Grid.Column="1" 
                                         Content="support@proxyassessmenttool.com"
                                         Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="GitHub:" Margin="0,0,20,0"/>
                        <HyperlinkButton Grid.Row="3" Grid.Column="1" 
                                         Content="View on GitHub"
                                         Click="GitHubLink_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>