<Window x:Class="ProxyAssessmentTool.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProxyAssessmentTool"
        Width="500" Height="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True">
    <Border Background="#FF1E1E1E" 
            BorderBrush="#FF0078D4" 
            BorderThickness="2"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!-- Logo/Title -->
            <StackPanel Grid.Row="0" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <TextBlock Text="ProxyAssessmentTool" 
                           FontSize="28" 
                           FontWeight="Light"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Security Assessment Platform" 
                           FontSize="14" 
                           Foreground="#FFB0B0B0"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Progress -->
            <Grid Grid.Row="1" Margin="40,20">
                <ProgressBar x:Name="ProgressBar" 
                             Height="4"
                             Background="#FF2D2D30"
                             Foreground="#FF0078D4"
                             BorderThickness="0"/>
                <TextBlock x:Name="StatusText"
                           Text="Initializing..."
                           Foreground="#FFB0B0B0"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </Grid>
            
            <!-- Version -->
            <TextBlock Grid.Row="2" 
                       x:Name="VersionText"
                       Text="Version 1.0.0"
                       Foreground="#FF808080"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Border>
</Window>