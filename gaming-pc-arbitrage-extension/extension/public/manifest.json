{
  "manifest_version": 3,
  "name": "Gaming PC Arbitrage Pro",
  "version": "1.0.0",
  "description": "Maximize profits in gaming PC arbitrage with intelligent automation and real-time market analysis",
  "author": "Arbitrage Pro Team",
  
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications"
  ],
  
  "optional_host_permissions": [
    "https://www.facebook.com/marketplace/*",
    "https://*.craigslist.org/*",
    "https://offerup.com/*"
  ],
  
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/marketplace/*"],
      "js": ["content/fb/index.js"],
      "css": ["content/fb/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.craigslist.org/*"],
      "js": ["content/craigslist/index.js"],
      "css": ["content/craigslist/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://offerup.com/*"],
      "js": ["content/offerup/index.js"],
      "css": ["content/offerup/styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Gaming PC Arbitrage Pro",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "options_page": "options/index.html",
  
  "web_accessible_resources": [
    {
      "resources": [
        "dashboard/*",
        "assets/*",
        "fonts/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none';"
  },
  
  "minimum_chrome_version": "114"
}