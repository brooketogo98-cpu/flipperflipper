{
  "name": "gaming-pc-arbitrage-extension",
  "version": "1.0.0",
  "description": "Chrome extension for gaming PC arbitrage across marketplaces",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "extension"
  ],
  "scripts": {
    "dev": "npm run dev:extension",
    "dev:extension": "cd extension && vite",
    "dev:core": "cd packages/core && npm run dev",
    "build": "npm run build:all && node scripts/build.js",
    "build:all": "npm run build:core && npm run build:extension",
    "build:core": "cd packages/core && npm run build",
    "build:extension": "cd extension && vite build",
    "build:prod": "NODE_ENV=production npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist build node_modules/.cache",
    "package": "npm run build:prod",
    "release": "npm run test && npm run package",
    "migrate": "node scripts/migrate.js",
    "analyze": "vite-bundle-visualizer"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.0",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "comlink": "^4.4.1",
    "date-fns": "^3.0.6",
    "decimal.js": "^10.4.3",
    "dexie": "^3.2.4",
    "dexie-encrypted": "^2.0.0",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "recharts": "^2.10.3",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.21",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.3",
    "@vitest/ui": "^1.1.3",
    "archiver": "^6.0.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "fs-extra": "^11.2.0",
    "jsdom": "^23.2.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-bundle-visualizer": "^0.11.0",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/gaming-pc-arbitrage.git"
  },
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/gaming-pc-arbitrage/issues"
