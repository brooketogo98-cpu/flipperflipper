{
  "name": "gaming-pc-arbitrage-extension",
  "version": "1.0.0",
  "private": true,
  "description": "Professional gaming PC arbitrage Chrome extension for Facebook Marketplace",
  "author": "Arbitrage Pro Team",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "extension",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=extension",
    "build": "npm run build:packages && npm run build --workspace=extension",
    "build:packages": "npm run build --workspaces --if-present",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite extension/dist packages/*/dist",
    "package": "npm run build && cd extension/dist && zip -r ../../arbitrage-extension.zip ."
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}