<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Font Families -->
    <FontFamily x:Key="InterFontFamily">pack://application:,,,/Resources/Fonts/#Inter</FontFamily>
    <FontFamily x:Key="JetBrainsMonoFontFamily">pack://application:,,,/Resources/Fonts/#JetBrains Mono</FontFamily>
    
    <!-- Display Typography -->
    <Style x:Key="DisplayLargeTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="LineHeight" Value="40"/>
        <Setter Property="Foreground" Value="{StaticResource SnowBrush}"/>
    </Style>
    
    <Style x:Key="DisplayTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="LineHeight" Value="28"/>
        <Setter Property="Foreground" Value="{StaticResource SnowBrush}"/>
    </Style>
    
    <!-- Heading Typography -->
    <Style x:Key="H1TextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="LineHeight" Value="28"/>
        <Setter Property="Foreground" Value="{StaticResource SnowBrush}"/>
    </Style>
    
    <Style x:Key="H2TextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="LineHeight" Value="24"/>
        <Setter Property="Foreground" Value="{StaticResource SnowBrush}"/>
    </Style>
    
    <Style x:Key="H3TextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="LineHeight" Value="20"/>
        <Setter Property="Foreground" Value="{StaticResource SnowBrush}"/>
    </Style>
    
    <!-- Body Typography -->
    <Style x:Key="BodyLargeTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="LineHeight" Value="24"/>
        <Setter Property="Foreground" Value="{StaticResource MistBrush}"/>
    </Style>
    
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="LineHeight" Value="20"/>
        <Setter Property="Foreground" Value="{StaticResource MistBrush}"/>
    </Style>
    
    <Style x:Key="BodySmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="LineHeight" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource MistBrush}"/>
    </Style>
    
    <!-- Caption Typography -->
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="LineHeight" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource TextMutedColor}"/>
    </Style>
    
    <Style x:Key="CaptionSmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="LineHeight" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextMutedColor}"/>
    </Style>
    
    <!-- Monospace Typography -->
    <Style x:Key="MonospaceTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource JetBrainsMonoFontFamily}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="LineHeight" Value="18"/>
        <Setter Property="Foreground" Value="{StaticResource MistBrush}"/>
    </Style>
    
    <Style x:Key="MonospaceSmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource JetBrainsMonoFontFamily}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="LineHeight" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource MistBrush}"/>
    </Style>
    
    <!-- Button Typography -->
    <Style x:Key="ButtonTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="ButtonSmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <!-- Label Typography -->
    <Style x:Key="LabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
    </Style>
    
    <!-- Link Typography -->
    <Style x:Key="LinkTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource PulseBrush}"/>
        <Setter Property="TextDecorations" Value="None"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
</ResourceDictionary>